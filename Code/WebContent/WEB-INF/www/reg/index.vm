<script type="text/javascript" src="$!{project_name}/js/jquery-1.7.2.min.js"></script>
<script type="text/javascript" src="$!{project_name}/js/jquery.form-2.67.js" charset="utf-8"></script>
<script type="text/javascript" src="${project_name}/js/getcity.js" charset="utf-8"></script>
<script type="text/javascript" src="${project_name}/js/sha1.js" charset="utf-8"></script>
<script type="text/javascript">
var pwd, pwd2;
$('#frm_reg').ajaxForm({
    beforeSubmit: function(a,f,o) {
		if($('#f_email').val().length == 0){
			$('#f_email').focus();
			$('#error_msg').hide();
			$('#error_msg').html("邮箱地址必须填写！");
			$('#error_msg').show("fast");
			return false;
		}
		
		if($('#f_email').val().length != 0){
			var email = $('#f_email').val();
		    var myreg = /^([a-zA-Z0-9]+[_|\_|\.]?)*[a-zA-Z0-9]+@([a-zA-Z0-9]+[_|\_|\.]?)*[a-zA-Z0-9]+\.[a-zA-Z]{2,3}$/;
            if(!myreg.test(email)){
            	$('#f_email').focus();
				$('#error_msg').hide();
				$('#error_msg').html("邮箱地址错误！");
				$('#error_msg').show("fast");
				return false;
            }
		}
		
		if($('#f_name').val().length == 0){
			$('#f_name').focus();
			$('#error_msg').hide();
			$('#error_msg').html("用户昵称必须填写");
			$('#error_msg').show("fast");
			return false;
		}
		
		if($('#f_name').val().length < 3){
			$('#f_name').focus();
			$('#error_msg').hide();
			$('#error_msg').html("用户昵称太短");
			$('#error_msg').show("fast");
			return false;
		}
		
		if($('#f_pwd').val().length == 0){
			$('#f_pwd').focus();
			$('#error_msg').hide();
			$('#error_msg').html("密码必须填写");
			$('#error_msg').show("fast");
			return false;
		}
		
		if($('#f_pwd').val().length < 6){
			$('#f_pwd').focus();
			$('#error_msg').hide();
			$('#error_msg').html("密码长度不能少于六位");
			$('#error_msg').show("fast");
			return false;
		}
		
		if($('#f_pwd').val().length == 0 || $('#f_pwd').val() != $('#f_pwd2').val()){
			$('#f_pwd').focus();
			$('#error_msg').hide();
			$('#error_msg').html("两次密码必须相同");
			$('#error_msg').show("fast");
			return false;
		}
		
		if($('#userProvince').val().length == 0){
			$('#error_msg').hide();
			$('#error_msg').html("请选择你所在的城市");
			$('#error_msg').show("fast");
			return false;
		}
		
		if($('#userCity').val().length == 0){
			$('#error_msg').hide();
			$('#error_msg').html("请选择你所在的城市");
			$('#error_msg').show("fast");
			return false;
		}  
		
		if($('#f_vcode').val().length == 0){
			$('#f_vcode').focus();
			$('#error_msg').hide();
			$('#error_msg').html("验证码必须填写");
			$('#error_msg').show("fast");
			return false;
		}
		
		 pwd=$('#f_pwd').val();
		 pwd2=$('#f_pwd2').val();
		$('#f_pwd').val(CryptoJS.SHA1($('#f_pwd').val()));
		$('#f_pwd2').val(CryptoJS.SHA1($('#f_pwd2').val()));
		
    },
    success: function(html) {
    	if(html.length > 0){
			$('#f_pwd').val(pwd);
			$('#f_pwd2').val(pwd2);
    		$('#error_msg').hide();
    		$('#error_msg').html(html);
    		$('#error_msg').show("fast");
    	}else{
			location.href="/";
    		//location.href="http://www.coderroad.com/home/regok?email=" + $('#f_email').val();
    	}
    }
});
</script>